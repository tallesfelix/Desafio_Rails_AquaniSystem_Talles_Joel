<p id="notice"><%= notice %></p>

<h1>Groups</h1>

    <% @groups.each do |group| %>
        <p>Group: <%= link_to group.name, group %></p>
        <p>Teacher: <%= group.teacher %></p>
        <p><%= link_to 'Show', group %>
        <td><%= link_to 'Edit', edit_group_path(group) %></td>
        <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <% end %>

